{
    "compilerOptions": {
        "module": "es2020",
        "target": "es6",
        "moduleResolution": "node",
        "baseUrl": ".",
        "outDir": "dist",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitOverride": true
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}